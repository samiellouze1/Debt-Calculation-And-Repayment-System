@using Debt_Calculation_And_Repayment_System.Data.ViewModels
@model ChangeStatusVM
@{
    ViewData["Title"] = "Change Status";
}
@section Title {
    Change Status
}
    <div class="container-fluid px-0 py-5">
        <div class="row mx-0 justify-content-center pt-5">
            <div class="col-lg-6">
                <div class="section-title text-center position-relative mb-4">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Change status for</h6>
                    <h1 class="display-4">@Model.Id</h1>
                </div>
            </div>
        </div>
        <div class="row justify-content-center bg-image mx-5 mb-5">
            <div class="col-lg-12 py-5">
                <div class="bg-white p-5 my-5">
                    <h1 class="text-center mb-4">Change Status</h1>
                    <form asp-action="ChangeStatus">
                        <div style="display:flex;">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Id</label>
                                    <input asp-for="Id" type="text" class="form-control bg-light border-0" readonly placeholder="Id" value=@Model.Id>
                                    <span asp-validation-for="Id" style="color:red"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label >Select a type</label>
                                    <select asp-for="Type" class="form-control bg-light border-0">
                                    @foreach (var item in Model.statuses)
                                    {
                                        <option   value=@item.Type>@item.Type</option>
                                    }
                                </select>
                                <span asp-validation-for="Type" style="color:red"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6" style="width:50%;margin: 0 auto;">
                            <button class="btn btn-primary btn-block" type="submit" value="ChangeStatus" id="btnDelete">Change Status</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

