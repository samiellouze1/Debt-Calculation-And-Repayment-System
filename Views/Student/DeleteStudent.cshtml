@using Debt_Calculation_And_Repayment_System.Data.ViewModels
@model DeleteStudentVM
@{
    ViewData["Title"] = "Create Debt";
}
@section Title {
    Delete Student
}
    <div class="container-fluid px-0 py-5">
        <div class="row mx-0 justify-content-center pt-5">
            <div class="col-lg-6">
                <div class="section-title text-center position-relative mb-4">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Silmek istediğine emin misin</h6>
                    <h1 class="display-4">@Model.Id</h1>
                </div>
            </div>
        </div>
        <div class="row justify-content-center bg-image mx-5 mb-5">
            <div class="col-lg-12 py-5">
                <div class="bg-white p-5 my-5">
                    <h1 class="text-center mb-4">Onayla</h1>
                    <form asp-action="DeleteStudent">
                        <div style="display:flex;">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Id</label>
                                    <input asp-for="Id" type="text" class="form-control bg-light border-0" readonly placeholder="Id" value=@Model.Id>
                                    <span asp-validation-for="Id" style="color:red"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Check this box</label>
                                    <input asp-for="Delete" id="chkDelete" type="checkbox" class="form-control bg-light border-0" placeholder="Confirm">
                                    <span asp-validation-for="Delete" style="color:red"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6" style="width:50%;margin: 0 auto;">
                            <button class="btn btn-primary btn-block" type="submit" value="DeleteStudent" id="btnDelete">Bursiyer Sil</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
    <script>
        // Disable the button initially
        document.getElementById('btnDelete').disabled = true;

        // Enable/disable the button based on checkbox state
        document.getElementById('chkDelete').addEventListener('change', function () {
            document.getElementById('btnDelete').disabled = !this.checked;
        });
    </script>
}
