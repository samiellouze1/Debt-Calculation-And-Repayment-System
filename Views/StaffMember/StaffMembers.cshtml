@model List<STAFFMEMBER>
@{
    Layout = "~/Views/Shared/_LayoutSecondary.cshtml";
}
@section Title {
    Staff Members
}
    @section Name1{
    Information about
}
    @section Name2{
    Staff Members
}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Profile</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Address</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Registration Date</th>
                <th scope="col">Students</th>
                <th scope="col">Send Reset Password</th>

            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><a asp-controller="StaffMember" asp-action="StaffMemberById" class="btn btn-secondary py-2 px-4 d-none d-lg-block" style="width:150px;height:45px;">@item.Email</a></td>
                <td>@item.FirstName</td>
                <td>@item.SurName</td>
                <td>@item.Address</td>
                <td>@item.PhoneNumber</td>
                <td>@item.RegDate</td>
                <td><a asp-controller="Student" asp-action="StudentsByStaffMember" asp-route-id=@item.Id class="btn btn-secondary py-2 px-4 d-none d-lg-block" style="width:150px;height:45px;">Students</a></td>
                <td><a asp-controller="Account" asp-action="SendPasswordResetEmail" asp-route-id=@item.Id class="btn btn-secondary py-2 px-4 d-none d-lg-block">Send Reset Password Email</a></td>
            </tr>
        }
    </tbody>
</table>
