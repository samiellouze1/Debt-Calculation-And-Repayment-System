@using Debt_Calculation_And_Repayment_System.Data.Static
@model STAFFMEMBER
@{
    ViewData["Title"] = "Index";
}


@section Title {
    Home
}

    <div class="jumbotron jumbotron-fluid position-relative overlay-bottom">
        <div class="container text-center my-5 py-5">
            <h1 class="text-white mt-4 mb-4">Profile of Staff Member</h1>
            <h1 class="text-white display-1 mb-5">@Model.Email</h1>
            @if (User.IsInRole(UserRoles.Admin)||User.IsInRole(UserRoles.StaffMember))
            {
                <a asp-controller="Student" asp-action="StudentsByStaffMember" asp-route-id=@Model.Id class="btn btn-secondary px-3 px-lg-5">Students</a>
                <a asp-controller="Request" asp-action="RequestsByStaffMember" asp-route-id=@Model.Id class="btn btn-secondary px-3 px-lg-5">Requests</a>
            }
        </div>
    </div>