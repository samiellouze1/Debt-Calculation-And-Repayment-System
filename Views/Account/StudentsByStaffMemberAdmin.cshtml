@model List<STUDENT>
@{
    ViewData["Title"] = "My Students";
}
<div class="container-fluid px-0 py-5">
    <div class="row mx-0 justify-content-center pt-5">
        <div class="col-lg-6">
            <div class="section-title text-center position-relative mb-4">
                <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">This specific view is only viewed by admins</h6>
                <h1 class="display-4">Students of @Model[0].StaffMember.FirstName @Model[0].StaffMember.SurName</h1>
            </div>
        </div>
    </div>
    <div class="row justify-content-center bg-image mx-0 mb-5">
        <div class="col-lg-12 py-6">
            <table class="table " style="width:1000px;margin-left:10%;margin-right:10%;">
                <thead>
                    <tr>
                        <th scope="col">UserName</th>
                        <th scope="col">FirstName</th>
                        <th scope="col">SurName</th>
                        <th scope="col">PhoneNumber</th>
                        <th scope="col">Number of Scolarship Debts</th>
                        <th scope="col">Registration Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-primary">
                            <td>@item.UserName</td>
                            <td>@item.FirstName</td>
                            <td>@item.SurName</td>
                            <td>@item.PhoneNumber</td>
                            <td><a asp-controller="Debt" asp-action="DebtsByStudentAdmin" asp-route-id=@item.Id>@item.Debts.Count()</a></td>
                            <td>@item.RegDate</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>