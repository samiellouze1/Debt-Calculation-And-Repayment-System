@using Debt_Calculation_And_Repayment_System.Data.ViewModels
@model CreateDebtVM;
@{
    ViewData["Title"] = "Create Debt";
}
@section Title {
    Create Debt
}
<div class="container-fluid px-0 py-5" style="width:1200px;margin-left:10%;margin-right:10%;">
    <div class="row mx-0 justify-content-center pt-5">
        <div class="col-lg-6">
            <div class="section-title text-center position-relative mb-4">
                <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">This specific view is only viewed by staff members</h6>
                <h1 class="display-4">Create Debt</h1>
            </div>
        </div>
    </div>
    <div class="row justify-content-center bg-image mx-0 mb-5">
        <div class="col-lg-9 py-5">
            <div class="bg-white p-5 my-5">
                <h1 class="text-center mb-4">Fill in the new password!</h1>
                <form asp-action="CreateDebt">
                    <div class="form-row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input asp-for="InitialAmount" type="text" class="form-control bg-light border-0" placeholder="Initial Amount" style="padding: 30px 20px;">
                                <span asp-validation-for="InitialAmount" style="color:red"></span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input asp-for="InterestRate" type="text" class="form-control bg-light border-0" placeholder="Interest Rate" style="padding: 30px 20px;">
                                <span asp-validation-for="InterestRate" style="color:red"></span>
                            </div>
                        </div> 
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input asp-for="StartDate" type="datetime" class="form-control bg-light border-0" placeholder="Start Date" style="padding: 30px 20px;">
                                <span asp-validation-for="StartDate" style="color:red"></span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input asp-for="StartDate" type="datetime" class="form-control bg-light border-0" placeholder="Start Date" style="padding: 30px 20px;">
                                <span asp-validation-for="StartDate" style="color:red"></span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input asp-for="Paid" type="checkbox" class="form-control bg-light border-0" placeholder="Paid" style="padding: 30px 20px;">
                                <span asp-validation-for="Paid" style="color:red"></span>
                            </div>
                        </div>                        
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input asp-for="StudentId" type="checkbox" class="form-control bg-light border-0" placeholder="StudentId" style="padding: 30px 20px;">
                                <span asp-validation-for="StudentId" style="color:red"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6" style="width:50%;margin: 0 auto;">
                        <button class="btn btn-primary btn-block" type="submit" style="height: 60px;" value="CreateDebt">Reset Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
