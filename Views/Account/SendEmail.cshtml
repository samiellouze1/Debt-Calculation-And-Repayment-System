@using Debt_Calculation_And_Repayment_System.Data.ViewModels
@model SendEmailViewModel
@{
    ViewData["Title"] = "Send Email";
}
@section Title {
    Send Email
}
    <div class="container-fluid px-0 py-5">
        <div class="row mx-0 justify-content-center pt-5">
            <div class="col-lg-6">
                <div class="section-title text-center position-relative mb-4">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">This specific view is only viewed by admins</h6>
                    <h1 class="display-4">Send Email</h1>
                </div>
            </div>
        </div>
        <div class="row justify-content-center bg-image mx-5 mb-5">
            <div class="col-lg-12 py-5">
                <div class="bg-white p-5 my-5">
                    <h1 class="text-center mb-4">Fill in information about the new debt</h1>
                    <form asp-action="CreateDebt">
                        <div class="form-row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label >Select an email</label>
                                    <select asp-for="Email" class="form-control bg-light border-0">
                                    @foreach (var item in Model.Users)
                                    {
                                        <option asp-for="Email" value=@item.Email>@item.Email</option>
                                    }
                                </select>
                                <span asp-validation-for="Email" style="color:red"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Subject</label>
                                <input asp-for="Subject" type="text" class="form-control bg-light border-0" placeholder="Subject">
                                <span asp-validation-for="Subject" style="color:red"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Body</label>
                                <input asp-for="Body" type="date" class="form-control bg-light border-0" placeholder="Body">
                                <span asp-validation-for="Body" style="color:red"></span>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-6" style="width:50%;margin: 0 auto;">
                        <button class="btn btn-primary btn-block" type="submit" value="CreateRequest">Create Debt</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
