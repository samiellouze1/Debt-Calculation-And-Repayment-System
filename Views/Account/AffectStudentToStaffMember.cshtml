@using Debt_Calculation_And_Repayment_System.Data.ViewModels
@model AffectVM
@{
    ViewData["Title"] = "Affect";

}
@section Title {
    Affect
}
    <div class="container-fluid px-0 py-5" style="width:1200px;">
        <div class="row mx-0 justify-content-center pt-5">
            <div class="col-lg-6">
                <div class="section-title text-center position-relative mb-4">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Admin</h6>
                    <h1 class="display-4">CREATE DEBT</h1>
                </div>
            </div>
        </div>
        <div class="row justify-content-center bg-image mx-5 mb-5">
            <div class="col-lg-12 py-5">
                <div class="bg-white p-5 my-5">
                    <h1 class="text-center mb-4">Link A student to a staff member</h1>
                    <form asp-action="AffectStudentToStaffMember">
                        <div class="form-row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="StudentId">Select a Student</label>
                                    <select asp-for="StudentId" class="form-control bg-light border-0">
                                    @foreach (var item in Model.Students)
                                    {
                                        <option value="@item.Id">@item.UserName</option>
                                    }
                                    </select>
                                    <span asp-validation-for="StudentId" style="color:red"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label asp-for="StaffMemberId">Select a Staff Member</label>
                                    <select asp-for="StaffMemberId" class="form-control bg-light border-0">
                                        @foreach (var item in Model.StaffMembers)
                                        {
                                            <option value="@item.Id">@item.UserName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="StudentId" style="color:red"></span>
                                </div>
                            </div>
                    </div>
                    <div class="col-sm-6" style="width:50%;margin: 0 auto;">
                        <button class="btn btn-primary btn-block" type="submit" value="AffectStudentToStaffMember" value="AffectStudentToStaffMember" >Affect Student To Staff Member</button>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
