@model List<DEBT>
@{
    ViewData["Title"] = "Debts By Staff Member";
}
@section Title {
    Debts By Student
}
<div class="container-fluid px-0 py-5">
    <div class="row mx-0 justify-content-center pt-5">
        <div class="col-lg-6">
            <div class="section-title text-center position-relative mb-4">
                <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">This specific view is only viewed by admins</h6>
                <h1 class="display-4">Debts of Student @Model[0].Student.FirstName @Model[0].Student.SurName</h1>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mx-0 mb-5">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Student</th>
                            <th scope="col">Initial Amount</th>
                            <th scope="col">Start Date</th>
                            <th scope="col">Interest Rate</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a asp-controller="Account" asp-action="StudentAdmin" asp-route-id=@item.StudentId>@item.Student.Email</a></td>
                            <td>@item.InitialAmount</td>
                            <td>@item.StartDate</td>
                            <td>@item.InterestRate</td>
                            <td><a asp-controller="PaymentPlan" asp-action="PaymentPlansByDebtAdmin" asp-route-id=@item.Id>PaymentPlans</a></td>
                            <td><a asp-controller="Account" asp-action="StaffMemberAdmin" asp-route-id=@item.Student.StaffMember.Id>@item.Student.StaffMember.Email</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
