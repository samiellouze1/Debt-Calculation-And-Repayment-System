@using Debt_Calculation_And_Repayment_System.Data.ViewModels
@model DeleteDebtVM
@{
    ViewData["Title"] = "Create Debt";
}
@section Title {
    Create Debt
}
    <div class="container-fluid px-0 py-5">
        <div class="row mx-0 justify-content-center pt-5">
            <div class="col-lg-6">
                <div class="section-title text-center position-relative mb-4">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Silmek istediğine emin misin</h6>
                    <h1 class="display-4">@Model.Id</h1>
                </div>
            </div>
        </div>
        <div class="row justify-content-center bg-image mx-5 mb-5">
            <div class="col-lg-12 py-5">
                <div class="bg-white p-5 my-5">
                    <h1 class="text-center mb-4">Borcu Sil</h1>
                    <form asp-action="DeleteDebt">
                        <div style="display:flex;">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    
                                    <input asp-for="Id" type="hidden" class="form-control bg-light border-0" readonly placeholder="Id" value=@Model.Id>
                                    <span asp-validation-for="Id" style="color:red"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Onayla</label>
                                    <input id="deleteCheckbox" asp-for="Delete" type="checkbox" class="form-control bg-light border-0" placeholder="Confirm">
                                    <span asp-validation-for="Delete" style="color:red"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6" style="width:50%;margin: 0 auto;">
                            <button id="deleteBtn" class="btn btn-primary btn-block" type="submit" value="DeleteDebt">Sil</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
    <script>
        // Get checkbox and button elements
        var deleteCheckbox = document.getElementById('deleteCheckbox');
        var deleteBtn = document.getElementById('deleteBtn');

        // Add event listener to checkbox
        deleteCheckbox.addEventListener('change', function () {
            // Enable/disable button based on checkbox state
            if (deleteCheckbox.checked) {
                deleteBtn.removeAttribute('disabled');
            } else {
                deleteBtn.setAttribute('disabled', 'disabled');
            }
        });
    </script>
}
