@model List<DEBT>
@{
    ViewData["Title"] = "Debts By Staff Member";
}
@section Title {
    Debts By Staff Member
}
<div class="container-fluid px-0 py-5">
    <div class="row mx-0 justify-content-center pt-5">
        <div class="col-lg-6">
            <div class="section-title text-center position-relative mb-4">
                <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">This specific view is only viewed by admins</h6>
                <h1 class="display-4">Debts of Staff Member @Model[0].Student.StaffMember.FirstName @Model[0].Student.StaffMember.SurName</h1>
            </div>
        </div>
    </div>
    <div class="row justify-content-center bg-image mx-0 mb-5 py-6">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Student</th>
                            <th scope="col">Initial Amount</th>
                            <th scope="col">Start Date</th>
                            <th scope="col">Interest Rate</th>
                            <th scope="col">Staff Member</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a asp-controller="Account" asp-action="StudentAdmin" asp-route-id=@item.StudentId>@item.Student.Email</a></td>
                            <td>@item.InitialAmount</td>
                            <td>@item.StartDate</td>
                            <td>@item.InterestRate</td>
                            <td><a asp-controller="Account" asp-action="StaffMemberAdmin" asp-route-id=@item.Student.StaffMemberId>@item.Student.StaffMember.Email</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
