<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@RenderSection("Title", required: false) - Debt Calculation And Repayment System</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">
    <link href="~/img/favicon.ico" rel="icon">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500;600;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Topbar Start -->
    <div class="container-fluid bg-dark">
        <div class="row py-2 px-lg-5">
            <div class="col-lg-6 text-center text-lg-left mb-2 mb-lg-0">
                <div class="d-inline-flex align-items-center text-white">
                    <small><i class="fa fa-phone-alt mr-2"></i>+012 345 6789</small>
                    <small class="px-3">|</small>
                    <small><i class="fa fa-envelope mr-2"></i>debtcalculation1@gmail.com</small>
                </div>
            </div>
            <div class="col-lg-6 text-center text-lg-right">
                <div class="d-inline-flex align-items-center">
                    <a class="text-white px-2" href="">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a class="text-white px-2" href="">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a class="text-white px-2" href="">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a class="text-white px-2" href="">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a class="text-white pl-2" href="">
                        <i class="fab fa-youtube"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg bg-white navbar-light py-3 py-lg-0 px-lg-5">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand ml-lg-3">
                <h1 class="m-0 text-uppercase text-primary"><i class="fa fa-book-reader mr-3"></i>NAZIM</h1>
            </a>
            @if (User.IsInRole("Admin"))
            {
                <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2" style="margin-top:30px;">Admin</h6>
            }
            @if (User.IsInRole("StaffMember"))
            {
                <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2" style="margin-top:30px;">Staff Member</h6>
            }
            @if (User.IsInRole("Student"))
            {
                <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2" style="margin-top:30px;">Student</h6>
            }
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between px-lg-3" id="navbarCollapse">
                <div class="navbar-nav mx-auto py-0">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="ProgramType" asp-action="AllProgramTypes" class="nav-item nav-link active">ProgramTypes</a>
                            <a asp-controller="Student" asp-action="AllStudents" class="nav-item nav-link active">Students</a>
                            <a asp-controller="StaffMember" asp-action="AllStaffMembers" class="nav-item nav-link active">Staff Members</a>
                            <a asp-controller="Status" asp-action="AllStatuses" class="nav-item nav-link active">All Statuses</a>
                            <a asp-controller="EmailTemplate" asp-action="AllTemplates" class="nav-item nav-link active">Email Templates</a>
                        }
                        @if (User.IsInRole("StaffMember"))
                        {
                            <a asp-controller="StaffMember" asp-action="MyProfile" class="nav-item nav-link active">My Profile</a>
                            <a asp-controller="Student" asp-action="MyStudents" class="nav-item nav-link active">My Students</a>
                            <a asp-controller="Request" asp-action="MyRequests" class="nav-item nav-link active">My Requests</a>
                            <a asp-controller="Status" asp-action="AllStatuses" class="nav-item nav-link active">All Statuses</a>
                        }
                        @if (User.IsInRole("Student"))
                        {
                            <a asp-controller="Student" asp-action="MyProfile" class="nav-item nav-link active">My profile</a>
                            <a asp-controller="DebtRegister" asp-action="MyDebtRegister" class="nav-item nav-link active">My Debt Register</a>
                        }
                    }
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    @if(User.IsInRole("Admin"))
                    {
                        <a asp-controller="ProgramType" asp-action="AddProgramType" class="btn btn-primary py-2 px-4 d-none d-lg-block" style="margin-right:10px;">Add Program Type</a>
                        <a asp-controller="Account" asp-action="AffectStudentToStaffMember" class="btn btn-primary py-2 px-4 d-none d-lg-block" style="margin-right:10px;">Affect Student To Staff Member</a>
                        <a asp-controller="Account" asp-action="RegisterAStaffMember" class="btn btn-primary py-2 px-4 d-none d-lg-block" style="margin-right:10px;">Register A Staff Member</a>
                    } 
                    @if (User.IsInRole("StaffMember"))
                    {

                        <a asp-controller="Status" asp-action="CreateStatus" class="btn btn-primary py-2 px-4 d-none d-lg-block" style="margin-right:10px;">Create Status</a>
                        <a asp-controller="Debt" asp-action="CreateDebt" class="btn btn-primary py-2 px-4 d-none d-lg-block" style="margin-right:10px;">Create Debt</a>
                        <a asp-controller="Account" asp-action="RegisterAStudent" class="btn btn-primary py-2 px-4 d-none d-lg-block" style="margin-right:10px;">Register A Student</a>

                    }
                    <form asp-controller="Account" asp-action="Logout">
                        <button class ="btn btn-secondary py-2 px-4 d-none d-lg-block">
                            Logout
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-secondary px-4 px-lg-5">Login</a>
                }
            </div>
        </nav>
    </div>
    <!--********************************************-->
    <main role="main">
        @RenderBody()
    </main>
    <!--********************************************-->
    <div class="container-fluid position-relative overlay-top bg-dark text-white-50 py-5" style="margin-top: 90px;">
        <div class="container mt-5 pt-5">
            <div class="row">
                <div class="col-md-6 mb-5">
                    <a href="index.html" class="navbar-brand">
                        <h1 class="mt-n2 text-uppercase text-white"><i class="fa fa-book-reader mr-3"></i>NAZIM</h1>
                    </a>
                    <p class="m-0">It is very recommended that you respect our turms of use. Thank you so much for visiting our website. Here are some useful links you can go to to learn more about us! Peace!</p>
                </div>

            </div>
            <div class="row">
                <div class="col-md-4 mb-5">
                    <h3 class="text-white mb-4">Useful Link 1</h3>

                </div>
                <div class="col-md-4 mb-5">
                    <h3 class="text-white mb-4">Useful Link 2</h3>

                </div>
                <div class="col-md-4 mb-5">
                    <h3 class="text-white mb-4">Useful Link 3</h3>

                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid bg-dark text-white-50 border-top py-4" style="border-color: rgba(256, 256, 256, .1) !important;">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-left mb-3 mb-md-0">
                    <p class="m-0">
                        Copyright &copy; <a class="text-white" href="#">Debt Calculation and Repayment System</a>. All Rights Reserved.
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-right">
                    <p class="m-0">
                        Contact <a class="text-white" href="https://htmlcodex.com">debtcalculation1@gmail.com</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary rounded-0 btn-lg-square back-to-top"><i class="fa fa-angle-double-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/counterup/counterup.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>