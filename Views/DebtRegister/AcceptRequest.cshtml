@using Debt_Calculation_And_Repayment_System.Data.ViewModels
@model AcceptRequestVM
@{
    ViewData["Title"] = "Create Debt";
}
@section Title {
    Create Debt
}
    <div class="container-fluid px-0 py-5">
        <div class="row mx-0 justify-content-center pt-5">
            <div class="col-lg-6">
                <div class="section-title text-center position-relative mb-4">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Details of request</h6>
                    <h1 class="display-4">Total is @Model.Total</h1>
                    <h1 class="display-4">The student will pay @Model.ToBePaidFull in full</h1>
                    <h1 class="display-4">the student will pay @(Model.Total-Model.ToBePaidFull) in installments</h1>
                    <h1 class="display-4">which will result in the sum of installments being @Model.ToBePaidInstallment</h1>
                    <h1 class="display-4">paying each Month @Model.ToBePaidEachMonth</h1>
                    <h1 class="display-4">for @Model.NumOfMonths Months</h1>
                </div>
            </div>
        </div>
        <div class="row justify-content-center bg-image mx-5 mb-5">
            <div class="col-lg-12 py-5">
                <div class="bg-white p-5 my-5">
                    <h1 class="text-center mb-4">Confirm that you accept the request</h1>
                    <form asp-action="AcceptRequest">
                        <div style="display:flex;">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Id</label>
                                    <input asp-for="Id" type="text" class="form-control bg-light border-0" readonly placeholder="Id" value=@Model.Id>
                                    <span asp-validation-for="Id" style="color:red"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Check this box</label>
                                    <input asp-for="Accept" type="checkbox" class="form-control bg-light border-0" placeholder="Confirm">
                                    <span asp-validation-for="Accept" style="color:red"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6" style="width:50%;margin: 0 auto;">
                            <button class="btn btn-primary btn-block" type="submit" value="AcceptRequest">Accept Request</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>