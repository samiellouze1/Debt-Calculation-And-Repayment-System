@using Debt_Calculation_And_Repayment_System.Data.ViewModels
@model ProgramTypeVM
@{
    ViewData["Title"] = "Program Adı Ekle";
}
@section Title {
    Program Adı Ekle
}
    <div class="container-fluid px-0 py-5">
        <div class="row mx-0 justify-content-center pt-5">
            <div class="col-lg-6">
                <div class="section-title text-center position-relative mb-4">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">BU ALAN SADECE YÖNETİCİLER TARAFINDAN GÖRÜNTÜLENİR</h6>
                <h1 class="display-4">Program Adı Ekle</h1>
                </div>
            </div>
        </div>
        <div class="row justify-content-center bg-image mx-5 mb-5">
            <div class="col-lg-12 py-5">
                <div class="bg-white p-5 my-5">
                <h1 class="text-center mb-4">Program Adı Giriniz</h1>
                    <form asp-action="AddProgramType">
                    <input asp-for="Id" type="hidden" class="form-control bg-light border-0" readonly placeholder="Id" value=@Model.Id>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Para Birimi</label>
                            <select asp-for="Currency" class="form-control bg-light border-0">
                                
                                <option value=TL>TL</option>
                                <option value=Dolar>Dolar</option>
                                <option value=Avro>Avro</option>
                                
                            </select>
                            <span asp-validation-for="Currency" style="color:red"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Faiz Oranı </label>
                            <input asp-for="InterestRate" type="number" step="0.0001" min="0" max="1" class="form-control bg-light border-0" placeholder="Faiz Oranı [0-1]">
                            <span asp-validation-for="InterestRate" style="color:red"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Faiz Oranı(Taksit)</label>
                            <input asp-for="InterestRateInstallment" type="number" step="0.0001" min="0" max="1" class="form-control bg-light border-0" placeholder="Faiz Oranı(Taksit) [0-1]">
                            <span asp-validation-for="InterestRateInstallment" style="color:red"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Faiz Oranı Gecikme</label>
                            <input asp-for="InterestRateDelay" type="number" step="0.0001" min="0" max="1" class="form-control bg-light border-0" placeholder="Faiz Oranı (Günlük Gecikme)">
                            <span asp-validation-for="InterestRateDelay" style="color:red"></span>
                        </div>
                    </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Program Adı</label>
                            <input asp-for="Type" type="text" class="form-control bg-light border-0" placeholder="Program Adı">
                                <span asp-validation-for="Type" style="color:red"></span>
                            </div>
                        <strong> Oranları 0 ile 1 arası giriniz Örnek: 0.1 =%10 Örnek: 0.025=%2.5  )</strong>
                            <button class="btn btn-primary btn-block" type="submit" value="AddProgramType">Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
