@using Debt_Calculation_And_Repayment_System.Data.ViewModels
@model ProgramTypeVM
@{
    ViewData["Title"] = "Create Program Type";
}
@section Title {
    Create Program Type
}
    <div class="container-fluid px-0 py-5">
        <div class="row mx-0 justify-content-center pt-5">
            <div class="col-lg-6">
                <div class="section-title text-center position-relative mb-4">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">This specific view is only viewed by admins</h6>
                    <h1 class="display-4">Create Program type</h1>
                </div>
            </div>
        </div>
        <div class="row justify-content-center bg-image mx-5 mb-5">
            <div class="col-lg-12 py-5">
                <div class="bg-white p-5 my-5">
                    <h1 class="text-center mb-4">Fill in information about the new program</h1>
                    <form asp-action="AddProgramType">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Program Type</label>
                                <input asp-for="Type" type="text" class="form-control bg-light border-0" placeholder="Program type name">
                                <span asp-validation-for="Type" style="color:red"></span>
                            </div>
                            <button class="btn btn-primary btn-block" type="submit" value="AddProgramType">Create Program Type</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
