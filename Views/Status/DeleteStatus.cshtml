@using Debt_Calculation_And_Repayment_System.Data.ViewModels
@model DeleteStatusVM
@{
    ViewData["Title"] = "Delete Status";
}
@section Title {
    Delete Status
}
    <div class="container-fluid px-0 py-5">
        <div class="row mx-0 justify-content-center pt-5">
            <div class="col-lg-6">
                <div class="section-title text-center position-relative mb-4">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Are you sure you want to delete Status</h6>
                    <h1 class="display-4">@Model.Type</h1>
                </div>
            </div>
        </div>
        <div class="row justify-content-center bg-image mx-5 mb-5">
            <div class="col-lg-12 py-5">
                <div class="bg-white p-5 my-5">
                    <h1 class="text-center mb-4">Confirm the delete</h1>
                    <form asp-action="DeleteStatus">
                        <div style="display:flex;">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Status Id</label>
                                    <input asp-for="Id" value=@Model.Id type="password" readonly class="form-control bg-light border-0" placeholder="Id">
                                    <span asp-validation-for="Id" style="color:red"></span>
                                </div>
                            </div>        
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Check this box</label>
                                    <input asp-for="Delete" id="chkDelete" type="checkbox" class="form-control bg-light border-0" placeholder="Confirm">
                                    <span asp-validation-for="Delete" style="color:red"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6" style="width:50%;margin: 0 auto;">
                            <button class="btn btn-primary btn-block" type="submit" value="DeleteStatus" id="btnDelete" >Delete Status</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


@section Scripts {
    <script>
        // Get the checkbox and submit button by their IDs
        var checkbox = document.getElementById('chkDelete');
        var submitButton = document.getElementById('btnDelete');

        // Disable the submit button by default
        submitButton.disabled = true;

        // Add an event listener to the checkbox
        checkbox.addEventListener('change', function () {
            // If the checkbox is checked, enable the submit button, otherwise disable it
            if (checkbox.checked) {
                submitButton.disabled = false;
            } else {
                submitButton.disabled = true;
            }
        });
    </script>

}