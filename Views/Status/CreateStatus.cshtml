@using Debt_Calculation_And_Repayment_System.Data.ViewModels
@model CreateStatusVM
@{
    ViewData["Title"] = "Create Status";
}
@section Title {
    Create Status
}
    <div class="container-fluid px-0 py-5">
        <div class="row mx-0 justify-content-center pt-5">
            <div class="col-lg-6">
                <div class="section-title text-center position-relative mb-4">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">This specific view is only viewed by staff members</h6>
                    <h1 class="display-4">CREATE STATUS</h1>
                </div>
            </div>
        </div>
        <div class="row justify-content-center bg-image mx-5 mb-5">
            <div class="col-lg-12 py-5">
                <div class="bg-white p-5 my-5">
                    <h1 class="text-center mb-4">Fill in the name of the new type</h1>
                    <form asp-action="CreateStatus">

                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Type</label>
                                <input asp-for="Type" type="text" class="form-control bg-light border-0" placeholder="Type">
                                <span asp-validation-for="Type" style="color:red"></span>
                            </div>
                        </div>

                    <div class="col-sm-6" style="width:50%;margin: 0 auto;">
                        <button class="btn btn-primary btn-block" type="submit" value="CreateStatus">Create Status</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
