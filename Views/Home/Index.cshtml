@{
    ViewData["Title"] = "Index";
}


@section Title {
    Home
}

<div class="jumbotron jumbotron-fluid position-relative overlay-bottom">
    <div class="container text-center my-5 py-5">
        <h1 class="text-white mt-4 mb-4">Welcome to</h1>
        <h1 class="text-white display-1 mb-5">Debt Calculation & Repayment System</h1>
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Account" asp-action="Login" class="btn btn-secondary px-3 px-lg-5">Login</a>
        }
    </div>
</div>